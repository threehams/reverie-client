{
  "name": "reverie-client",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "better-npm-run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "better-npm-run test --watch",
    "test:ci": "better-npm-run test",
    "test:coverage": "better-npm-run coverage",
    "start": "better-npm-run start",
    "server": "better-npm-run server",
    "postinstall": "node scripts/postinstall.js"
  },
  "betterScripts": {
    "test": {
      "command": "mocha --require babel-register --require babel-polyfill --require ./src/__test__/test-helper.js --timeout=200 --reporter min src/**/*.spec.js",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:ci": {
      "command": "mocha --require babel-register --require babel-polyfill --require ./src/__test__/test-helper.js --reporter mocha-junit-reporter src/**/*.spec.js",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "coverage": {
      "command": "nyc --require babel-core/register node_modules/.bin/mocha --require babel-register --require babel-polyfill --require ./src/__test__/test-helper.js --timeout=200 src/**/*.spec.js && nyc  --require babel-core/register report --reporter=lcov",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "start": {
      "command": "nodemon ./dev-server.js",
      "env": {
        "PORT": 8080
      }
    },
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "server": {
      "command": "node ./prod-server.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-loader": "^6.2.1",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "better-npm-run": "0.0.8",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "immutable": "^3.7.6",
    "radium": "^0.17.0",
    "react": "^0.14.7",
    "react-addons-shallow-compare": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.0",
    "redux": "^3.3.1",
    "redux-immutable": "^3.0.3",
    "redux-thunk": "^2.0.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.12"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.0.0",
    "babel-preset-react-hmre": "*",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.3",
    "dirty-chai": "^1.2.2",
    "eslint": "^2.5.1",
    "eslint-plugin-react": "^4.0.0",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "mocha-junit-reporter": "^1.10.0",
    "nock": "^7.2.2",
    "nodemon": "^1.9.1",
    "nyc": "^6.1.1",
    "react-addons-test-utils": "^0.14.7",
    "react-tools": "^0.13.3",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "skin-deep": "^0.16.0",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.7.1",
    "ws": "^1.0.1"
  }
}
