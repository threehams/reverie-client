{
  "name": "reverie-client",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "better-npm-run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "node scripts/postinstall.js",
    "test": "better-npm-run test --watch",
    "test:ci": "better-npm-run test",
    "test:coverage": "better-npm-run coverage",
    "start": "better-npm-run start",
    "server": "better-npm-run server"
  },
  "betterScripts": {
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "coverage": {
      "command": "nyc --require babel-core/register node_modules/.bin/mocha --require babel-register --require babel-polyfill --require ./src/__test__/testHelper.js --timeout=200 src/**/*.spec.js && nyc  --require babel-core/register report --reporter=lcov",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "server": {
      "command": "node ./server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "nodemon ./server.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8080
      }
    },
    "test": {
      "command": "mocha --require babel-register --require babel-polyfill --require ./src/__test__/testHelper.js --timeout=200 --reporter min src/**/*.spec.js",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:ci": {
      "command": "mocha --require babel-register --require babel-polyfill --require ./src/__test__/testHelper.js --reporter mocha-junit-reporter src/**/*.spec.js",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/threehams/reverie-client.git"
  },
  "dependencies": {
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.7.2",
    "better-npm-run": "0.0.8",
    "compression": "^1.6.1",
    "css-loader": "^0.23.1",
    "express": "^4.13.4",
    "immutable": "^3.7.6",
    "json-loader": "^0.5.4",
    "radium": "^0.17.0",
    "react": "^15.0.1",
    "react-addons-shallow-compare": "^15.0.1",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.0.1",
    "react-markdown": "^2.1.1",
    "react-redux": "^4.4.0",
    "reconnectingwebsocket": "^1.0.0",
    "redux": "^3.3.1",
    "redux-immutable": "^3.0.3",
    "redux-thunk": "^2.0.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.12",
    "ws": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.2",
    "babel-preset-react-hmre": "*",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.3",
    "dirty-chai": "^1.2.2",
    "enzyme": "^2.2.0",
    "eslint": "^2.7.0",
    "eslint-plugin-import": "^1.4.0",
    "eslint-plugin-react": "^4.0.0",
    "eventsource-polyfill": "^0.9.6",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "mocha-junit-reporter": "^1.10.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "nyc": "^6.2.1",
    "react-addons-test-utils": "^15.0.1",
    "sass-loader": "^3.2.0",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.7.1"
  }
}
