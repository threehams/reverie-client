{
  "name": "reverie-client",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "better-npm-run build",
    "lint": "tslint {client,server}/**/*.ts{,x}",
    "lint:fix": "tslint {client,server}/**/*.ts{,x} . --fix",
    "postinstall": "node scripts/postinstall.js",
    "test": "better-npm-run test --watch --watch-extensions ts,tsx",
    "test:ci": "better-npm-run test",
    "test:coverage": "better-npm-run coverage",
    "test:coverage:open": "opener ./coverage/lcov-report/index.html",
    "start": "better-npm-run start",
    "server": "better-npm-run server"
  },
  "betterScripts": {
    "build": {
      "command": "tsc -p . && webpack --config tsDist/server/webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "coverage": {
      "command": "nyc --require ts-node/register --all node_modules/.bin/mocha --require ts-node/register --require ./__test__/testHelper.ts --timeout=200 **/*.spec.tsx && nyc  --require ts-node/register report --reporter=lcov",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "server": {
      "command": "ts-node ./server/index.ts",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "nodemon --exec ts-node server/index.ts",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8080
      }
    },
    "test": {
      "command": "mocha --require ts-node/register --require ./__test__/testHelper.ts --reporter min **/*.spec.tsx",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:ci": {
      "command": "mocha --require ts-node/register --require ./__test__/testHelper.ts --reporter mocha-junit-reporter **/*.spec.js",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/threehams/reverie-client.git"
  },
  "dependencies": {
    "@types/chai": "^3.4.34",
    "@types/compression": "0.0.33",
    "@types/core-js": "^0.9.35",
    "@types/enzyme": "^2.5.39",
    "@types/express": "^4.0.34",
    "@types/express-serve-static-core": "^4.0.39",
    "@types/mime": "0.0.29",
    "@types/mocha": "^2.2.35",
    "@types/node": "^6.0.54",
    "@types/radium": "^0.18.19",
    "@types/react": "^0.14.55",
    "@types/react-addons-shallow-compare": "0.0.0",
    "@types/react-dnd": "^2.0.31",
    "@types/react-dnd-html5-backend": "^2.1.6",
    "@types/react-dom": "^0.14.19",
    "@types/react-redux": "^4.4.35",
    "@types/recompose": "^0.20.2",
    "@types/redux-actions": "^1.2.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/serve-static": "^1.7.31",
    "@types/sinon": "^1.16.33",
    "@types/sinon-chai": "^2.7.27",
    "@types/webpack": "^2.0.0",
    "@types/ws": "0.0.37",
    "better-npm-run": "0.0.13",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.1",
    "express": "^4.14.0",
    "immutable": "threehams/immutable-js",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.3",
    "radium": "^0.18.1",
    "react": "^15.4.1",
    "react-addons-shallow-compare": "^15.4.1",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-markdown": "^2.4.2",
    "react-redux": "^5.0.1",
    "recompose": "^0.21.2",
    "reconnectingwebsocket": "^1.0.0",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.0",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.3",
    "ts-node": "^0.9.3",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0",
    "webpack-spritesmith": "0.3.1",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eventsource-polyfill": "^0.9.6",
    "isparta": "^4.0.0",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.12.1",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "opener": "^1.4.2",
    "react-addons-perf": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "ts-node": "^1.7.3",
    "tslint": "4.1.1",
    "typings": "^2.1.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.14.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js",
      "src/__test__/**/*",
      "src/fixtures/**/*",
      "src/*.js"
    ]
  }
}
