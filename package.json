{
  "name": "reverie-client",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "better-npm-run build",
    "dev-server": "better-npm-run dev-server",
    "lint": "tslint --exclude node_modules **/*.ts{,x}",
    "lint:fix": "tslint . --fix",
    "postinstall": "node scripts/postinstall.js",
    "test": "better-npm-run test --watch --watch-extensions ts,tsx",
    "test:ci": "better-npm-run test",
    "test:coverage": "better-npm-run coverage",
    "test:coverage:open": "opener ./coverage/lcov-report/index.html",
    "start": "better-npm-run start",
    "server": "better-npm-run server"
  },
  "betterScripts": {
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "coverage": {
      "command": "nyc --require ts-node/register --all node_modules/.bin/mocha --require ts-node/register --require ./__test__/testHelper.ts --timeout=200 **/*.spec.tsx && nyc  --require ts-node/register report --reporter=lcov",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "dev-server": {
      "command": "ts-node -P tsconfig.server.json ./server/devServer.ts",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "server": {
      "command": "ts-node -P tsconfig.server.json ./server/index.ts",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "concurrently --kill-others \"ts-node -P tsconfig.server.json server/devServer.ts\" \"nodemon --exec ts-node -P tsconfig.server.json ./server/index.ts\"",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "test": {
      "command": "mocha --require ts-node/register --require ./__test__/testHelper.ts --reporter min **/*.spec.tsx",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:ci": {
      "command": "mocha --require ts-node/register --require ./__test__/testHelper.ts --reporter mocha-junit-reporter **/*.spec.js",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/threehams/reverie-client.git"
  },
  "dependencies": {
    "better-npm-run": "0.0.13",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.1",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "http-proxy": "^1.16.2",
    "immutable": "threehams/immutable-js",
    "json-loader": "^0.5.4",
    "lodash": "^4.17.3",
    "radium": "^0.18.1",
    "react": "^15.4.1",
    "react-addons-shallow-compare": "^15.4.1",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.5",
    "react-markdown": "^2.4.2",
    "react-redux": "^5.0.1",
    "reconnectingwebsocket": "^1.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.3",
    "ts-node": "^1.7.2",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-spritesmith": "0.3.1",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "concurrently": "^3.1.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eventsource-polyfill": "^0.9.6",
    "isparta": "^4.0.0",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.12.1",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "opener": "^1.4.2",
    "react-addons-perf": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "tslint": "^4.2.0",
    "typings": "^2.1.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.14.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js",
      "src/__test__/**/*",
      "src/fixtures/**/*",
      "src/*.js"
    ]
  }
}
