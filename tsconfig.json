{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "tsDist",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es5", "es6", "es2016.array.include", "es2017.object"]
  },
  "include": [
    "client/**/*",
    "common/**/*",
    "server/**/*",
    "typings/**/*",
    "webpack.config.ts"
  ]
}
