{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": false,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "tsDist",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true
  },
  "include": [
    "client/**/*",
    "shared/**/*",
    "server/**/*",
    "node_modules/@types/**/*",
    "typings/**/*"
  ]
}
